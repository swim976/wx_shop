.cart-item{
	display: flex;
	align-items: center;
	background-color: #fff;
	margin: 10rpx;
	padding: 10rpx 0;
}
.cart-check{
	flex: 1;
}
.cart-image{
	flex: 2;
	font-size: 0;
	box-sizing: border-box;
	border: 1px solid #ccc;
}
.cart-desc{
	padding: 10rpx;
	flex: 6;
	font-size: 28rpx;
	/*display: flex;
	flex-direction: column;*/
	text-align: left;
	align-self: flex-start;
}
.item-name{
	
}
.item-price{
	color: red;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.item-sum{
	color: red;
	
}
.item-total{
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
}