<!--会员登录界面-->

<form>

  <view class="denglu">
    <text class="shuoming">请输入你的会员账号</text>

    <view class="form-wrap"> 
      <view class="flex-wap input-wrap">
        <text class="label">账号</text>
        <input name="name" value="" id="username" class="account-info-input"></input>
      </view> 

   <view class="flex-wap input-wrap">
        <text class="label">密码</text>
        <input password name="upwd" value="" id="password" class="account-info-input"></input>
      </view>   
    </view>

    <text class="shuoming">请准确填写账号信息，有问题联系客服</text>
    <button class="mysubmit" type="primary">登陆</button>
    <navigator url="zhuce"><button class="mysubmit" type="primary">注册新用户</button></navigator>
    <button open-type="getUserInfo" bindgetuserinfo="" class="wx">微信登录</button>
  </view>

</form>