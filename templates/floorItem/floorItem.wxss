.floor-item{
	width: 100%;
	margin-top: 10rpx;
}
.floor-title{
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 28rpx;
	color: #c84d2c;
}
.floor-image{
	overflow: hidden;
}
.image-item{
	width: 50%;
	/*height: 193.926rpx !important;*/
	float: left;
	box-sizing: border-box;
	border-right: 1rpx solid #eee;
	border-top: 1rpx solid #eee;
}
.image-item:first-child{
	height: 387rpx !important; 
}
.number{
	display: inline-block;
	width: 38rpx;
	height: 38rpx;
	line-height: 40rpx;
	color: #fff;
	font-size: 20rpx;
	text-align: center;
	background: #e5017d;
	border-radius: 50%;
	margin-right: 5rpx;
}